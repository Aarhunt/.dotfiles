# Commands
alias ll="ls -AghF" 
alias lsls="ls -Qm"
alias od="onedrive -m --skip-dir .git --check-for-nosync"

alias pdf="evince"

alias please='sudo $(history -p !!)'

# nvim
alias nivm="nvim"
alias vim="nvim"
alias vi="nvim"
alias nano="nvim"

# speed
alias zshrc="nvim ~/.zshrc"
alias aur="fc -s 'sudo pacman'='paru'"

# Keybinds
bindkey "^[[1;5C" forward-word
bindkey "^[[1;5D" backward-word

